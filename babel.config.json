{
  "presets": ["@babel/preset-typescript"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@": "./src"
        }
      }
    ]
  ],
  "ignore": ["node_modules"],
  "only": ["./src"],
  "extensions": [".ts"],
  "output": {
    "path": "path.resolve(__dirname, 'dist')",
    "filename": "bundle.js"
  }
}
